<Page
    x:Class="Thiskord_Front.Navigateur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Thiskord_Front"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" 
          Width="125" 
          HorizontalAlignment="Left" 
          VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DropDownButton Grid.Row="0" Content="Mail" HorizontalAlignment="Center" Margin="0,10,0,0">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Send"/>
                        <MenuFlyoutItem Text="Reply"/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>

            <ListView
            Grid.Row="1"
            x:Name="BaseExample"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="0,10,0,10"
            SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="12" HorizontalAlignment="Center"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" Orientation="Vertical" Padding="0,0,0,10">
                <PersonPicture 
                ProfilePicture="https://learn.microsoft.com/windows/uwp/contacts-and-calendar/images/shoulder-tap-static-payload.png" 
                Width="50" Height="50"
                HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Frame x:Name="InnerFrame" 
           Grid.Column="1">
        </Frame>

    </Grid>
</Page>